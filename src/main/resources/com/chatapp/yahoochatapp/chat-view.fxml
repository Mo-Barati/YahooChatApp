<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>  <!-- âœ… Import Insets -->

<BorderPane xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.chatapp.yahoochatapp.ChatController"
            prefWidth="400" prefHeight="600">

    <!-- Chat Area -->
    <center>
        <VBox spacing="10" alignment="CENTER">
            <ListView fx:id="chatMessagesList" prefHeight="450"/>  <!-- Chat Messages -->
        </VBox>
    </center>

    <!-- Input Area -->
    <bottom>
        <HBox spacing="10" alignment="CENTER">
            <TextField fx:id="messageField" promptText="Type a message..." HBox.hgrow="ALWAYS"/>
            <Button text="Send" fx:id="sendButton" onAction="#handleSendMessage"/>
        </HBox>
    </bottom>
</BorderPane>

