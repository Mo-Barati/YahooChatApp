<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.chatapp.yahoochatapp.DashboardController"
            prefWidth="400" prefHeight="800">  <!-- ✅ Ensures correct screen size -->

    <top>
        <Label text="Welcome to the Dashboard"
               style="-fx-font-size: 18px; -fx-font-weight: bold;"
               BorderPane.alignment="CENTER"/>
    </top>

    <center>
        <VBox spacing="15" alignment="CENTER">  <!-- ✅ Added spacing for better layout -->
            <Button text="Profile Settings" fx:id="profileButton" onAction="#handleProfileSettings" minWidth="140"/>
            <Button text="Logout" fx:id="logoutButton" onAction="#handleLogout" minWidth="140"/>
        </VBox>
    </center>

</BorderPane>
